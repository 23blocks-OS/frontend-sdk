# NPM Registry Configuration
# Default to npm public registry
registry=https://registry.npmjs.org/

# Scoped packages go to npm
@23blocks:registry=https://registry.npmjs.org/

# Access level for scoped packages (public by default)
access=public

# Auth token set via environment variable NPM_TOKEN
//registry.npmjs.org/:_authToken=${NPM_TOKEN}

# Prevent npm from checking for updates
update-notifier=false

# Strict SSL
strict-ssl=true

# Save exact versions
save-exact=false

# Engine strict mode
engine-strict=true
